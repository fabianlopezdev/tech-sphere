<script>
    // This runs client-side and fills in the current year
    const yearEl = document.getElementById('current-year');
    if (yearEl) yearEl.textContent = `${new Date().getFullYear()}`;
  </script>

<footer>
    <div class="footer-wrapper">
      <p>Contact us at <a href="mailto:admin@tech-sphere.io">admin@tech-sphere.io</a></p>
      <form id="notify-form">
        <label for="email">Or, notify me when we launch:</label>
        <div>
          <input class="email-input" type="email" placeholder="Email" aria-label="Email" />
          <button type="submit">→</button>
        </div>
        <label class="consent-label">
          <input type="checkbox" required />
          I agree to the <a href="/privacy-policy" target="_blank">Privacy Policy</a>
        </label>
      </form>
    </div>
    <small>© <span id="current-year"></span> Tech Sphere S.L. All rights reserved.</small>
  </footer>
  
  <style>

a {
  color: gray;
}

body.dark #notify-form button {
  background: var(--text-light);
  color: var(--text-dark);
}

.consent-label {
  margin-top: 0.5rem;
}

.footer-wrapper {
  width: fit-content;
  border: 1px solid var(--accent);
  padding: 1rem;
  margin-bottom: 1.5rem;
}

.footer-wrapper p,
label {
  margin-top: 0;
  text-align: left;
}

.label {
  text-align: left;
}

#notify-form {
  display: flex;
  flex-direction: column;
  text-align: left;
}

#notify-form .email-input {
  margin-top: 0.5rem;
  padding: 0.5rem;
  font-size: 1rem;
  border: 1px solid #ccc;
  border-radius: 4px;
  outline: none;
  width: auto;
  max-width: 300px;
  min-width: 200px;
}

#notify-form button {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  background: var(--text-dark);
  color: var(--text-light);
  border: none;
  border-radius: 4px;
  cursor: pointer;
  margin-left: 0.25rem;
}

/* Footer positioning: only absolute on large screens */
@media (min-width: 1020px) {
  footer {
    position: absolute;
    bottom: 1rem;
    left: 1rem;
    width: fit-content;
    color: var(--accent);
  }
}

/* Small is always absolutely positioned */
small {
  position: absolute;
  width: 100%;
  bottom: 0.5rem;
  left: 50%;
  transform: translateX(-50%);
  color: var(--accent);
}

  
  </style>