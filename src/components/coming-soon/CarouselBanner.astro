<style>
.banner-container {
  position: absolute;
  bottom: -10rem;
  left: 70%;
  width: 150%;
  height: 4rem;
  pointer-events: none;
}

.banner-container > * {
    pointer-events: auto;
}

.banner-tooltip {
  position: absolute;
  bottom: calc(100% + 0.5rem);
  left: 12%;
  transform: translateX(-50%);
  padding: 0.3rem 0.6rem;
  background: var(--accent);
  color: #fff;
  font-size: 1.5rem;
  border-radius: 0.3rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s, transform 0.3s;
  white-space: nowrap;
  z-index: 10;
}

.banner-container:hover .banner-tooltip {
  opacity: 1;
  transform: translate(-50%, -1rem);
}

.carousel-banner {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    transform: rotate(-35deg);
    transform-origin: bottom left;
    color: var(--text-dark);
	border: 1px solid var(--text-dark);
	display: flex;
    align-items: center;
}

body.dark .carousel-banner {
    background-color: var(--text-light);
    color: var(--text-dark);
}

.carousel-text {
      display: inline-flex;
      align-items: center;
      white-space: nowrap;
      font-size: 2rem;
      will-change: transform;
      animation: scroll-left 15s linear infinite;
}

.carousel-star {
    color: var(--accent);
    font-size: 3rem;
    margin-inline: 1.5rem;
    line-height: 1;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding-top: 1.2rem;
}

@keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
}

.carousel-banner:hover .carousel-star {
    animation: pulse 1.5s ease-in-out infinite alternate;
}

.carousel-banner::before {
    content: "";
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: linear-gradient(120deg,
        rgba(255,0,150,0.2),
        rgba(0,200,255,0.2),
        rgba(255,200,0,0.2));
    mix-blend-mode: screen;
    opacity: 0;
    transition: opacity 0.5s ease;
    background-size: 200% 200%;
}

.banner-container:hover .carousel-banner::before {
    opacity: 1;
    animation: gradient-move 3s infinite linear;
}

@keyframes pulse {
    from {
        transform: scale(1);
        text-shadow: none;
    }
    to {
        transform: scale(1.3);
        text-shadow: 0 0 12px var(--accent);
    }
}

@keyframes gradient-move {
    0%   { background-position: 0% 50%; }
    50%  { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

</style>