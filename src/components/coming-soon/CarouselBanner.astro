<style>
    /* Variable definitions (assuming these exist elsewhere, add them if not) */
    :root {
      --text-dark: #333;
      --text-light: #f0f0f0;
      --accent: deeppink;
    }

    /* --- Base Styles (Mobile First / Screens < 1020px) --- */

    .banner-tooltip {
      position: fixed;              /* Position relative to viewport */
      top: 1rem;                    /* Distance from the top */
      left: 50%;                    /* Left edge at screen center */
      transform: translateX(-50%);  /* Center horizontally */
      padding: 0.3rem 0.6rem;
      background: var(--accent);
      color: #fff;
      font-size: 1.2rem; /* Adjusted size slightly */
      border-radius: 0.3rem;
      opacity: 1;                   /* Always visible */
      pointer-events: none;         /* Doesn't block clicks */
      white-space: nowrap;
      z-index: 1000;                /* Stay on top */
    }

    .banner-container {
      /* Default: Normal flow */
      width: 102vw; /* Take full width in normal flow */
      margin-bottom: 0.5rem; 
      /* Removed position, bottom, left, specific width/height */
    }

    .carousel-banner {
        transform: rotate(-2deg);
        height: clamp(2rem, 0.909rem + 4.848vw, 4rem);
      /* Default: Normal flow appearance */
      overflow: hidden;
      color: var(--text-dark);
      border: 1px solid var(--text-dark);
      display: flex;
      align-items: center;
      pointer-events: auto; /* Allow interaction */
      width: 100%; /* Take full width of container */
      /* padding-block: 0.5rem; Add some padding for height */
      /* Removed position, top, left, transform, transform-origin, fixed height */
      /* Ensure background is set for dark mode toggle */
      background-color: var(--text-light); /* Default light background */
    }

 

    body.dark .carousel-banner {
        /* Dark mode applies regardless of screen size */
        background-color: var(--text-dark); /* Use dark bg for dark mode */
        color: var(--text-light); /* Use light text */
        border: 1px solid var(--text-light); /* Adjust border for contrast */
    }
    /* Example dark mode toggle class */
    body.dark {
         background-color: #222;
         color: var(--text-light);
    }


    .carousel-text {
          display: inline-flex;
          align-items: center;
          white-space: nowrap;
          font-size: clamp(1rem, 0.455rem + 2.424vw, 2rem); /* Slightly adjusted base size */
          will-change: transform;
          animation: scroll-left 15s linear infinite;
    }

    .carousel-star {
        color: var(--accent);
        font-size: 2.5rem; /* Slightly adjusted base size */
        margin-inline: 1rem; /* Slightly adjusted base size */
        line-height: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding-top: 0.8rem; /* Adjusted padding */
    }

    @keyframes scroll-left {
        0% {
          transform: translateX(0);
        }
        100% {
          transform: translateX(-50%);
        }
    }

    .carousel-banner:hover .carousel-star {
        animation: pulse 1.5s ease-in-out infinite alternate;
    }

    /* Pseudo-element for gradient needs to be relative to the banner itself */
    .carousel-banner::before {
        content: "";
        position: absolute;
        top: 0; left: 0; right: 0; bottom: 0;
        background: linear-gradient(120deg,
            rgba(255,0,150,0.2),
            rgba(0,200,255,0.2),
            rgba(255,200,0,0.2));
        mix-blend-mode: screen;
        opacity: 0;
        transition: opacity 0.5s ease;
        background-size: 200% 200%;
        pointer-events: none; /* Ensure pseudo-element doesn't block hover */
    }

    .carousel-banner:hover::before {
        opacity: 1;
        animation: gradient-move 3s infinite linear;
    }

    @keyframes pulse {
        from {
            transform: scale(1);
            text-shadow: none;
        }
        to {
            transform: scale(1.3);
            text-shadow: 0 0 12px var(--accent);
        }
    }

    @keyframes gradient-move {
        0%   { background-position: 0% 50%; }
        50%  { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }


    /* --- Large Screen Overrides (>= 1020px) --- */
    @media (min-width: 1020px) {
      .banner-container {
        /* Apply absolute positioning only on large screens */
        position: absolute;
        bottom: -10%;
        left: 70%;
        width: 150%;
        height: 4rem;
        margin-block: 0; /* Reset margin */
      }

      .carousel-banner {
        /* Apply absolute positioning and transform only on large screens */
        position: absolute;
        top: 0;
        left: 0;
        width: 100%; /* Relative to banner-container */
        height: 100%; /* Relative to banner-container */
        transform: rotate(-35deg);
        transform-origin: bottom left;
        padding-block: 0; /* Reset padding */
        /* Other base styles like border, overflow, display are inherited */
      }

      /* Optional: Restore original font/star sizes if they were changed for mobile */
      .carousel-text {
        font-size: 2rem;
      }
      .carousel-star {
        font-size: 3rem;
        margin-inline: 1.5rem;
        padding-top: 1.2rem;
      }
    }

</style>