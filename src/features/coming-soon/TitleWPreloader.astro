---
import { TitleWithPreloaderPropsSchema, type TitleWithPreloaderProps } from './types'

const props = TitleWithPreloaderPropsSchema.parse(Astro.props)
const { title = 'TECH', showPreloader = true, className = '' } = props
const titleParts = title.split(' ')
const mainPart = titleParts[0] || 'TECH'
const secondPart = titleParts[1] || 'SPHERE'
---

<script src="/src/scripts/coming-soon/titlePreloader"></script>

<h1 id="main-title" class:list={['title', className]}>
  {mainPart}<br /><span class="title-second">{secondPart}</span>
</h1>

<style>
  .title {
    font-size: clamp(5rem, 12vw, 10rem); /* Responsive font size */
    margin: 0;
    margin-block-start: var(--space-md); /* Remove extra margins that might affect centering */
    text-align: center;
    line-height: 0.85;
    font-family: 'YourFinalFontName', 'Arial Black', Gadget, sans-serif;
    letter-spacing: normal;
    overflow-wrap: break-word;
    max-width: 100%;
    flex-shrink: 0; /* Prevent title from shrinking if content is large */
  }

  .title span {
    display: block;
  }

  .title-second {
    /* Adjust font size relative to the main title's clamp */
    font-size: clamp(3.4rem, 8vw, 6.8rem);
    font-weight: normal;
    color: var(--color-accent);
  }
</style>
